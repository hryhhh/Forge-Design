{
  "name": "forge-design",
  "private": false,
  "description": "A React component library for Forge Design System",
  "author": "hhhhry",
  "keywords": [
    "react",
    "component",
    "library",
    "design",
    "system",
    "forge"
  ],
  "version": "1.0.3",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hryhhh/Forge-Design"
  },
  "bugs": {
    "url": "https://github.com/hryhhh/Forge-Design/issues"
  },
  "homepage": "https://hryhhh.github.io/Forge-Design",
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./build",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-rollup": "rollup -c rollup.config.js",
    "build-css": "sass ./src/styles/index.scss:./build/index.css",
    "build-storybook": "storybook build",
    "build": "npm run clean && npm run build-css && npm run build-ts && npm run build-rollup && npm run build-storybook",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "test": "jest",
    "docs": "typedoc",
    "storybook": "storybook dev -p 6006",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@types/classnames": "^2.3.0",
    "classnames": "^2.5.1",
    "glob": "^9.3.5",
    "lru-cache": "^11.1.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.27.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-mdx-gfm": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/node-sass": "^4.11.8",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/sass": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.0.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "sass": "^1.86.1",
    "storybook": "^8.6.14",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.2.4",
    "vite-plugin-sass": "^0.1.0",
    "vitest": "^3.1.2"
  }
}
